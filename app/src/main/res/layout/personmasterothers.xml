<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layoutothers"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="@dimen/_10sdp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Passport No."
                android:textColor="@color/ColorBlack" />

            <EditText
                android:id="@+id/edtPassportNo."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bloour"
                android:padding="@dimen/_8sdp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingTop="@dimen/_10sdp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Validity of Visa"
                android:textColor="@color/ColorBlack" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:padding="@dimen/_8sdp"
                android:gravity="center|left"
                android:textColor="@color/whiteTextColor"
                android:id="@+id/edtDateVisaValidity"
                android:drawablePadding="10dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/edit_text_background"
                android:drawableRight="@drawable/ic_calendar"
                android:text="Select Date"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="@dimen/_10sdp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Visa No."
                android:textColor="@color/ColorBlack" />

            <EditText
                android:id="@+id/edtVisaNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bloour"
                android:padding="@dimen/_8sdp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="@dimen/_10sdp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expert in the Field of"
                android:textColor="@color/ColorBlack" />

            <EditText
                android:id="@+id/edtExpertInField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:drawablePadding="10dp"
                android:padding="@dimen/_8sdp"
                android:background="@drawable/border_bloour"
                android:drawableRight="@drawable/ic_calendar" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>